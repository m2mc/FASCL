{% extends "::identifi.html.twig" %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('bundles/fasclimain/css/identification.css') }}" type="text/css" media="all" />
    {{parent()}}
{% endblock %}
{% block fos_user_content %}
{% if error %}
    <div class="well ">{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}

<form class="form-signin well span3" action="{{ path("fos_user_security_check") }}" method="post" >
      <h2 class="form-signin-heading">Identifiez-vous!</h2>
    <input  type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div class="control-group">
    <label class="control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
    <div class="controls">
    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>
    </div>
    
    <div class="control-group">
    <label class="control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
    <div class="controls">
    <input type="password" id="password" name="_password" required="required" />
    </div>
    </div>
    
    <div class="control-group">
    <div class="controls">
    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
    <input class="checkbox" type="checkbox" id="remember_me" name="_remember_me" value="on" /> 
      
    </label>    
    <input type="submit" class="btn btn-large btn-primary" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
    <br/> <br/> <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√©?</a>
    </div>
    </div>
    
    </form>
{% endblock fos_user_content %}

