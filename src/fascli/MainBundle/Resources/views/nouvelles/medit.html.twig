{% for flashMessage in app.session.flashbag.get('notice5') %}
<div class="alert alert-success" style="font-weight:bold;">
{{ flashMessage }}
</div>
{% endfor %}
<form class="form-horizontal" action="{{ path('nouvelles_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
<input type="hidden" name="_method" value="PUT" />
 <div class="control_group">
<div class="control-label">
{{ form_errors(edit_form.titre) }}
{{ form_label(edit_form.titre) }}
      </div>
<div class="controls">
{{ form_widget(edit_form.titre) }}
</div>
</div>  
<div class="control_group " >
      <div class="control-label">
{{ form_errors(edit_form.contenu) }}
{{ form_label(edit_form.contenu) }}
      </div>
<div class="controls col-md-3 ">
{{ form_widget(edit_form.contenu) }}
</div>
</div>   

<div class="control_group" >
      <div class="control-label">
{{ form_label(edit_form.submit) }}
      </div>
<div class="controls">
{{ form_widget(edit_form.submit, { 'attr': {'class': 'pull-right btn btn-primary'}}) }}
</div>
</div>
 <div class="control_group">
{{ form_rest(edit_form) }}
</div> 
</form>
