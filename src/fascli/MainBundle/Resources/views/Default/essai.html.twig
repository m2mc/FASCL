{% extends "::pdfLayout.html.twig" %}

{% block content %}


{#<h1><img alt="" src="{{ asset('/../bundles/fasclimain/images/papier-peint.jpg') }}"></h1>#}
<img src="./bundles/fasclimain/images/papier-peint.jpg" width="10" height="10" alt="caré" />
{% for entity in entity %}
    <h2>OPERATION N° {{ entity.id }}</h2>

    <table class="table" style="width:100%; text-align:center">
      <thead>
              <tr>
              <th style="width: 30%">MARQUETEUR</th>
              <th style="width: 12%">N_BON</th>
              <th style="width: 18%">DATEBON</th>
              <th style="width: 30%">PRODUIT</th>
              <th style="width: 10%">BAC</th>
              </tr>
      </thead>
      <tbody>
             <tr>
              
              <td style="width: 30%">{{ entity.datope|date('Y-m-d H:i:s') }}</td>
              <td style="width: 12%">{{ entity.caissier }}</td>
              <td style="width: 18%">{{ entity.agence }}</td>
              <td style="width: 30%>{{ entity.typope }}</td>
              <td style="width: 10%">{{ entity.devise}}</td>
              <td >{{ entity.client}}</td>
          </tr>
      </tbody>
            {% endfor %}
    </table>
    <h2>DETAILS OPERATION </h2>
    <table >
           {% set y = 0 %}
          {% set z = 0 %}
          {% for xx in euros %}
           {% set y = y + ((xx.val)*(xx.qte)*(xx.tauxreel)) %}
           {% set z = xx.val*xx.qte*xx.tauxreel %}
             <tr>
            <td>{{xx.val}}</td> 
            <td>{{xx.qte}}</td> 
            <td>{{xx.tauxreel}}</td> 
            <td>{{z}}</td>
            </tr>

            {% endfor %}
            <tr><td>{{y}} </td></tr>
    </table>
<br/> <br/> <br/> <br/> <br/>      
   

{% endblock %}